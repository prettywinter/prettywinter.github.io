######## Comments ########
comments:
  service: beaudar # beaudar, utterances, valine, twikoo, waline
  # beaudar
  # https://beaudar.lipk.org/
  beaudar:
    repo: prettywinter/blog-comments
    issue-term: pathname
    issue-number:
    theme: preferred-color-scheme
    label: comment
    input-position: top # top/bottom 评论框位置
    comment-order: desc # desc 排序
    keep-theme: # true/false
    loading: false
    branch: main
 
favicon: https://raw.sevencdn.com/prettywinter/dist/main/images/favicon/favicon-32x32.png
avatar: https://raw.sevencdn.com/prettywinter/dist/main/images/avatar/avatar.jpeg